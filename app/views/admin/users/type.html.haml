- title "Listado de usuarios #{@role.title}"

%p
  - if @users.empty?
    No existen usuarios de este tipo.
  - else
    %table#orderable.tablesorter{:cellspacing => "1", :cellpadding => "0", :border => "0"}
      %thead
        %tr
          %th.header= "Login"
          %th.header= "Email"
      %tbody
        - for user in @users
          %tr{:class => "#{cycle('odd', 'even')}"}
            %td= user.login
            %td= user.email
            %td
              = link_to "Editar", edit_admin_user_path(user)
              = link_to "Eliminar", admin_user_path(user, :type => params[:type]), :confirm => 'Â¿EstÃ¡s seguro?', :method => :delete
%p
  - if %w(1 2).include? @role.id.to_s
    = link_to "Crear nuevo usuario", new_admin_path
  - else
    = link_to "Crear nuevo usuario", signup_path("user[role_id]" => @role.id)
  o
  = link_to "Volver", admin_users_path

