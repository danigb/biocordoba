%p
  = f.label :company_name, "Nombre de la compañia"
  %span.required= "*"
  %br/
  = f.text_field :company_name
%p
  = f.label :address, "Dirección"
  %span.required= "*"
  %br/
  = f.text_field :address
%p
  = f.label :sector_id, "Sector"
  %span.required= "*"
