- title "Mensajes #{MESSAGE[params[:action].to_sym]}"

%p
  Ver mensajes:
  = params[:action] == 'received' ? "Recibidos" : link_to("Recibidos", received_messages_path)
  |
  = params[:action] == 'sent' ? "Enviados" : link_to("Enviados", sent_messages_path)

%table#orderable.tablesorter{:cellspacing => "1", :cellpadding => "0", :border => "0"}
  %thead
    %tr
      %th.header Remitente
      %th.header Mensaje
      %th.header State
  %tbody 
    - for message in @messages
      %tr
        %td=link_to(message.sender.login, profile_path(message.sender)) 
        %td=h message.message
        %td=h message.state
        %td= link_to "ver", message_path(:id => message, :type => params[:action])
