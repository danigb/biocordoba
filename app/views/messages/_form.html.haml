- content_for :head do
  = javascript_include_tag 'jquery.autocomplete.min'
  = stylesheet_link_tag 'jquery.autocomplete'
- title "Nuevo Mensaje"
#new-message
  - form_for @message do |f|
    = f.error_messages
    %p
      = f.label :receivers_string, "Receptores del mensaje (Separados por comas o selecciona debajo)"
      %br/
      = f.text_field :receivers_string, :size => 53, :autocomplete =>"off"

    %p
      = f.label :message, "Mensaje"
      %br/
      = f.text_area :message, :size => "67x5"
    %b FIXME: ¿Este listado lo verá solo el administrador?
    #receivers
      #exhibitors
        Expositores
        %hr/
        - for exhibitor in User.exhibitors
          %p
            = check_box_tag "receivers[ids][]", exhibitor.profile.company_name
            = link_to exhibitor.profile.company_name, profile_path(exhibitor)
      #buyers
        Compradores
        %hr/
        - for buyer in User.buyers
          %p
            = check_box_tag "receivers[ids][]", buyer.profile.company_name
            = link_to buyer.profile.company_name, profile_path(buyer)

    .clear
    %p= f.submit "Enviar" 
