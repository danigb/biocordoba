#new-message
  - form_for @message do |f|
    = f.error_messages
    %p
      = f.label :receiver_id, "Receptores del mensaje (Separados por comas o selecciona debajo)"
      %br/
      = f.text_field :receiver_id, :size => 53

    %p
      = f.label :message, "Mensaje"
      %br/
      = f.text_area :message, :size => "67x5"

    %b FIXME ¿Esto le saldrá solo al administrador?
    #receivers
      #exhibitors
        Expositores
        %hr/
        - for exhibitor in User.exhibitors
          %p
            = check_box_tag "receivers[ids][]", exhibitor.profile.company_name
            = link_to exhibitor.profile.company_name, profile_path(exhibitor)
      #buyers
        Compradores
        %hr/
        - for buyer in User.buyers
          %p
            = check_box_tag "receivers[ids][]", buyer.profile.company_name
            = link_to buyer.profile.company_name, profile_path(buyer)

    .clear
    %p= f.submit "Enviar" 
