.date
  = back_link(@date)
  =" #{I18n.localize(@date, :format => '%A %d')} "
  = foward_link(@date)

- unless @meetings_by_host.blank?
  %ul
    - @meetings_by_host.each do |host, meetings|
      %li
        %strong
          = host.profile.company_name
          = link_to_remote image_tag("plus.gif"), :url => "/ajax/meetings?host_id=#{host.id}&guest=#{'1' if @guest}"
          %div{:id => "meetings-#{host.id}"}
- else
  No existen citas.

- content_for(:right_column) do 
  %p
    Ver agenda de:
  - form_for :user, :url => '/ajax/meetings_for', :html => {:method => :get} do |f|
    %p
      = f.select :id, User.type(@name).map{|u| [u.profile.company_name, u.to_param]}, :include_blank => true
    %p
      = submit_tag "Ver"
