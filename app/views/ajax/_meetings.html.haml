%ul
  - for meeting in meetings
    %li
      = "[#{meeting.starts_at.to_s(:hour_only)}]"
      = "cita #{MEETING_STATE[meeting.state.to_sym]} con"
      - unless guest == "1"
        = link_to_profile meeting.guest.profile, meeting.guest.profile.company_name 
      - else
        = link_to_profile meeting.host.profile, meeting.host.profile.company_name
      | 
      = link_to "Cancelar cita",  change_state_meeting_path(meeting, :state => 'cancel'), :confirm => '¿Estás seguro que quieres cancelar la cita?'

      
