-colspan = 4

%tr
  %td{:colspan => colspan}
    %div{:style => "color: #70B120;padding-left: 20px;font-size: 20px; font-weight: bolder;"}="Resumen de citas para el #{@date}"

- if @meetings.blank?

  %tr
    %td &nbsp;

  %tr
    %td{:colspan => colspan}
      %div{:style => "padding-left: 20px;"}
        No tienes citas concertadas para este dÃ­a

- else

  %tr
    %td &nbsp;

  %tr
    %td{:colspan => colspan}
      %ul
        - for meeting in @meetings
          %li.summary-item
            = meeting.date({:include_month => false, :include_week_day => false})
            con
            = link_to meeting.partner(@user).profile.company_name, profile_url(meeting.partner(@user).profile), :style => "color: #70B120;"
            |
            = link_to "Ver cita", meeting_url(meeting), :style => "color: #D41E67;"

