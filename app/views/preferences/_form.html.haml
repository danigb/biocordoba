%p
  = f.label :meetings_number, "Número máximo de reuniones"
  = f.text_field :meetings_number, :size => 2
%p
  = f.label :meetings_duration, "Duración de la reunión (minutos)"
  = f.text_field :meetings_duration, :size => 2
%p
  = f.label :event_start_day, "Fecha inicio del evento"
  = f.date_select :event_start_day, :order => [:day, :month, :year] 
