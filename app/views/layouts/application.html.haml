!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Sabor86")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'tablesorter', 'weekly'
    = javascript_include_tag :defaults, 'jquery.tablesorter.min.js'
    = yield(:head)
  
  %body
    #header
      = link_to "Sabor86", root_path

    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      = render :partial => 'sessions/user_bar'
      .clear
      = render :partial => 'shared/left_column'
      #content
        - if show_title?
          %h1=h yield(:title)
        = yield
      = render :partial => 'shared/right_column'
      .clear

    #footer
      - if Rails.env.development?
        = link_to "Changelog", development_path
