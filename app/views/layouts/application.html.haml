!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'tablesorter'
    = javascript_include_tag :defaults
    = javascript_include_tag "http://tablesorter.com/jquery.tablesorter.min.js"
    = yield(:head)
  
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      - if logged_in?
        = "Hola, #{current_user.login}."
        = link_to "Deslogu√©ate", logout_path

        - if Rails.env.development?
          %em
            = "| Modo Development: El usuario es <strong>#{current_user.role.title}</strong>"
        

      = yield
