!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Sabor86")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'tablesorter'
    = javascript_include_tag :defaults, 'jquery.tablesorter.min.js'
    = yield(:head)
  
  %body
    #header
      = link_to "Sabor86", root_path

    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      #breadcrumbs
        = crumbs
      #user-info
        - if logged_in?
          = "Hola, #{current_user.login}."
          - if current_user.is_admin?
            = link_to "Administración", admin_path 
            | 
          = link_to "Desloguéate", logout_path
      #admin-content
        - if show_title?
          %h1=h yield(:title)
        = yield
