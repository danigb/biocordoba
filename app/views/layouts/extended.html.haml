!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "AGENDA VIRTUAL")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'tablesorter', 'weekly', 'ui-theme/ui'
    = javascript_include_tag 'jquery-1.3.2.min', 'jquery-ui-1.7.2.custom.min', 'jquery.tablesorter.min', 'application'
    = yield(:head)
  
  %body
    #extended-container
      #header
        = link_to "AGENDA VIRTUAL", root_path
        = render :partial => 'sessions/user_bar'

      #extended-content
        #breadcrumbs
          = crumbs
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = yield

      #footer
        = link_to "Changelog", development_path
