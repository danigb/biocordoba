%h1
  Buscador

#search
  - form_for :search, :url => search_path do |f|
    %div
      = f.label 'profile_company_name_like', "CompaÃ±ia"
      %br/
      = f.text_field :profile_company_name_like

    %div
      = f.label 'profile_sector_id_equals', "Sector"
      %br/
      = f.select :profile_sector_id_equals, Sector.all.map{|s| [s.name, s.id]}, :include_blank => "Todos"

    %div
      = f.label 'roles_id_equals', "Tipo de usuario"
      %br/
      = f.select :roles_id_equals, Role.public_roles.map{|r| [ROLES[r.title.to_sym], r.id]}, :include_blank => "Todos"

    %div
      = f.submit "Buscar"

- if @users
  %ul
    - @users_by_sector.each do |sector_name, users|
      %h3
        = sector_name.capitalize

      - for user in users
        %li
          = "[#{ROLES[user.roles.first.title.to_sym]}]"
          = user.profile.company_name
          = link_to "Ver ficha", profile_path(user.profile)
          = link_to "Solicitar cita", meeting_into_and_path(current_user, user) if user.is_international_buyer? || user.is_national_buyer?


