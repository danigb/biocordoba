-title "Listado de usuarios según número de mensajes sin leer"

%table#orderable.tablesorter{:cellspacing => "1", :cellpadding => "0", :border => "0"}
  %thead
    %tr
      %th.header= "Empresa"
      %th.header= "Mensajes sin leer"
      %th.header= "Opciones"
  %tbody
    - for user in @users
      %tr{:class => "#{cycle('odd', 'even')}"}
        %td= link_to user.company_name, profile_path(user.profile_id), :class => 'profile-link', :id => user.profile_id
        %td= user.unread
        %td
          = link_to "Enviar Mensaje", new_message_path(:receiver => user.profile.company_name)
= will_paginate @users
= link_to "Volver", root_path
